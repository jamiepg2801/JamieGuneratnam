{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "New Covid Cases",
    "subtitle":"Source: https://coronavirus.data.gov.uk/",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "cadetblue"
  },
  
   "data": {
    "url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=ltla&metric=newCasesByPublishDateRollingRate&format=csv",
    "format": {"type": "csv"}
  },

   "transform":[
      
      {"filter": {
        "field": "areaName", 
        "oneOf": ["Bristol, City of", "Cardiff", "Hackney and City of London"]}
        }


    ],
  
  
  "height": 400,
  "width": 400,
   
  "mark": {"type": "area", "point": false},
 
  "encoding": {

    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },

    "y": {
      "field": "newCasesByPublishDateRollingRate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": true}
    },

    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "set1"},
      "title": null,
      "legend": {
        "orient": "top-right", 
        "fillColor": "#ffffff"}
    }
}
}