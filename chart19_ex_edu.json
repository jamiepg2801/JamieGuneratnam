{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Government expenditure on education, total (% of GDP)",
        "subtitle": "Source: The World Bank",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jamieprince/jamieprince.github.io/main/World_Bank_Data_Edied.csv",
        "format": {
            "type": "csv"
        }
    },
    "height": 400,
    "width": 400,
    "mark": {
        "type": "line",
        "point": true
    },
    "selection": {
        "Region": {
            "type": "single",
            "fields": [
                "Country Name"
            ],
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "United States",
                    "Sweden",
                    "Brazil",
                    "Germany",
                    "Russian Federation",
                    "Hong Kong SAR, China",
                    "Brazil",
                    "Canada",
                    "United Kingdom",
                    "Italy"
                ],
                "name": "Pick a country: "
            }
        }
    },
    "transform": [
        {
            "calculate": "'https://data.worldbank.org/indicator/SE.XPD.TOTL.GD.ZS'",
            "as": "url"
        },
        {
            "filter": "datum.Series=='Government expenditure on education as % of GDP (%)'"
        },
        {
            "filter": {
                "selection": "Region"
            }
        }
    ],
    "encoding": {
        "x": {
            "field": "Time",
            "type": "temporal",
            "title": "country"
        },
        "y": {
            "field": "Value",
            "type": "quantitative",
            "title": null,
            "axis": {
                "grid": true
            }
        },
        "color": {
            "field": "Country Name",
            "type": "nominal",
            "scale": {
                "scheme": "tableau20"
            },
            "title": "Country"
        },
        "tooltip": {
            "field": "Country Name",
            "type": "nominal"
        },
        "href": {
            "field": "url",
            "type": "nominal"
        }
    }
}